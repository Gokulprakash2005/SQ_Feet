generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TemplateDetails {
  id              Int      @id
  propertyTitle   String
  locationAddress String
  price           Int
  imageUrl        String?
  featured        String   @default("no")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Description {
  id                   Int      @id
  realSecurity         String
  ampleParking         String
  smartHomeIntegration String
  verifiedSafety       String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model BasicDetails {
  id           Int      @id
  propertyType String
  propertySize String
  bedrooms     Int
  bathrooms    Int
  balconies    Int
  totalFloors  Int
  floorNumber  Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Location {
  id        Int      @id
  address   String
  city      String
  pincode   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StatusAvailability {
  id               Int      @id
  propertyStatus   String
  ageOfProperty    String
  availableFrom    DateTime
  furnishingStatus String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model AreaDetails {
  id             Int      @id
  builtUpArea    String
  undividedShare String
  amenities      String
  features       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
